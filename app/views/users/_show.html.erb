<div class="user_name">
	<span>
		<h2 style="text-align:left;float:left;"><%= @user.name %></h2> 
		<h2 style="text-align:right;float:right;">
 		  	<%= link_to "Logout", signout_path,  method: :delete, id: "sign_out" %>
		</h2> 
	</span>
</div>
<br>

<div id="my_tabs">
  <ul>
    <li class="tab_width"><a href="#tabs_created_pings">My Created Pings</a></li>
    <li class="tab_width"><a href="#tabs_rsvp_pings">My RSVP's</a></li>
  </ul>
  <div class="my_scroll" id="tabs_created_pings">
    <ul id="created" class="ping_list">
        <%= render partial: "list", locals: {list: @user.your_created_pingas, main_list: false } %>
    </ul>
  </div>
		<div class="my_scroll" id="tabs_rsvp_pings">
    <ul id="rsvp" class="ping_list">
        <%= render partial: "list", locals: {list: @user.pingas_rsvpd_to, main_list: false } %>
    </ul>
  </div>
</div>

<div class="my_listen">
  <h4>Adjust your listening preferences:</h4>
  <div id="my_format">
    <% @user.user_categories.each do |uc| %>
      <%= label_tag("my_#{uc.category.title}", uc.category.title, class:"styled-label") do %>
        <%= check_box_tag("my_#{uc.category.title}", "#{uc.id}", !(uc.listening_status), {id: "my_#{uc.category.title}"}) %>
        <span><%= uc.category.title.downcase %></span>
      <% end %>
    <% end %>
  </div>
</div>

<br>
<div class="slider">
	<h4>My Listening Radius #this slider resets db's listen rad.</h4>
	<div id="slider" style='width: 400px;'></div><br>
	<div id="slider-value"></div>
</div>