	    <%= render "layouts/footer" %>
		</div>
	</body>
</div>

<script>
	$(function() {
		var ping1 = $("#landing_ping_1")
		var ping2 = $("#landing_ping_2")
		var ping3 = $("#landing_ping_3")
		var ping4 = $("#landing_ping_4")
		ping1.delay(2000).animate({top:"240px"}, 1000);
		ping2.delay(4100).animate({top:"130px"}, 1000);
		ping3.delay(6500).animate({top:"120px"}, 1000);
		ping4.delay(9000).animate({top:"220px"}, 1000);
	});
