<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 800px;'></div>
</div>

<script>
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: { maxZoom: 20 }, internal: {id: 'map'} }, function(){
//        SETS USER MARKER
        user_marker = handler.addMarkers(<%= raw @user_marker.to_json %>, {draggable: true});

//        SETS USER RADIUS
        user_radius = [{lng: <%= @user.longitude %>, lat: <%= @user.latitude %>, radius: 680 }];
        radius_options = { strokeColor:"#0000FF",strokeOpacity: 1, strokeWeight: 3, fillColor: '#FF0000' };


//        FILLS MAP WITH USER, RADIUS, AND PINGAS
        handler.addCircles(user_radius, radius_options);
//        SETS PINGA MARKERS
        pinga_markers = handler.addMarkers(<%=raw @pinga_markers.to_json %>);


        handler.bounds.extendWith(pinga_markers);
        handler.bounds.extendWith(user_marker);

        handler.fitMapToBounds();
//        CENTERS ON USER
        handler.map.centerOn({ lat: <%= @user.latitude %>, lng: <%= @user.longitude %> });

    });
</script>