<!DOCTYPE html>
<html>
	<head>
	  <title>Ping</title>
	  <%= stylesheet_link_tag "application"%>
	  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=true&libraries=places,geometry"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<!--     <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css"> -->
    <%= javascript_include_tag "application"%>
	  <%= csrf_meta_tags %>
	</head>
	<body>
    <%= render "layouts/topnav" %>
    <div class="container" style='width: 1100px; height: 520px;'>
        <% if flash[:notice] %>
          <div class="flash-notice">
            <p class="flash-text"><%= flash[:notice] %></p>
          </div>
        <% end %>

        <div class="map">
        <%= render partial: "shared/map" %>
        </div>
        <div class="content">
            <%= yield %>
        </div>
    </div>
    <%= render "layouts/footer" %>
    <script>google.maps.event.addDomListener(window, 'load', initialize);</script>
	</body>
</html>
